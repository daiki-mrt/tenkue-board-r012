<% if user_signed_in? %>
  <% if post.likes.exists?(user_id: current_user.id, post_id: post.id) %>
    <%= link_to post_likes_path(post.id),method: :delete, style: "color: crimson"  do %>
      <i class="fas fa-heart"></i>
      <span><%= post.likes.length %></span>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post.id),method: :post do %>
      <i class="far fa-heart"></i>
      <span><%= post.likes.length %></span>
    <% end %>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post.id),method: :post do %>
    <i class="far fa-heart"></i>
    <span><%= post.likes.length %></span>
  <% end %>
<% end %>
